{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "precommit": "lint-staged"
  },
  "keywords": [
    "cli"
  ],
  "author": "allen",
  "license": "ISC",
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.7",
    "prettier": "^2.0.5"
  },
  
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix --ext .js",
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "git add"
    ]
  }
}
